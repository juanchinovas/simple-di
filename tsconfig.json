{
	"compilerOptions": {
		"rootDir": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES2021",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "lib",
		"declarationDir": "types",
		"skipLibCheck": true
	},
	"include": ["./*.ts", "./*.spec.ts", "service/service.ts"],
	"exclude": [
		"node_modules",
		"lib",
		"types"
	]
}